<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory name="">
		<property name="hibernate.connection.driver_class">org.h2.Driver</property>
		<property name="hibernate.connection.url">jdbc:h2:tcp://localhost/~/BATCH</property>
		<property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.use_sql_comments">false</property>
		<property name="hibernate.format_sql">false</property>
		<property name="hibernate.generate_statistics">false</property>
		<property name="hibernate.bytecode.use_reflection_optimizer">true</property>
		<property name="hibernate.jdbc.use_scrollable_resultset">true</property>
		<property name="hibernate.cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>
		<property name="hibernate.connection.provider_class">com.praveen.commons.hibernate.DBConnectionProvider</property>
		<property name="hibernate.connection.release_mode">auto</property>
		<property name="hibernate.temp.use_jdbc_metadata_defaults">false</property>
		<property name="hibernate.connection.username">batch</property>
		<property name="hibernate.connection.password">batch</property>
		<property name="hibernate.jdbc.batch_size">50</property>
		<property name="hibernate.connection.pool_size">200</property>
	</session-factory>
</hibernate-configuration>
