<?xml version="1.0" encoding="UTF-8"?>
<!-- <configuration debug="false" scan="true" scanPeriod="30 seconds" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" -->
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="logback.xsd"
	scan="true" scanPeriod="30 seconds">
	<statusListener class="ch.qos.logback.core.status.NopStatusListener" />
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p &lt;%t&gt; [%30c] [ %M ] [%5L] - %msg%n</pattern>
		</encoder>
	</appender>
	<appender name="TECH" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/raise/log/race.%d{yyyy-MM-dd}.log</fileNamePattern>
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p &lt;%t&gt; [%30c] [ %M ] [%5L] - %msg%n</pattern>
		</encoder>
	</appender>
	<logger name="com.praveen.commons" level="INFO" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="TECH" />
	</logger>
	<logger name="org.hibernate" level="ERROR" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="TECH" />
	</logger>
	<logger name="com.mapping" level="INFO" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="TECH" />
	</logger>
	<root level="ERROR"></root>
</configuration>